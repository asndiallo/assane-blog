<% if @article.errors.any? %>
  <%= render 'form_errors' %>
<% end %>

<%= form_with model: @article, local: true do |f| %>
  <div>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :description %><br/>
    <%= f.text_area :description %>
  </div>
  <%= f.submit %>
<% end %>
